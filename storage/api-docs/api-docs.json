                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do treino",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalhes do treino retornado com sucesso"
                    },
                    "404": {
                        "description": "Treino não encontrado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "put": {
                "tags": [
                    "Workouts"
                ],
                "summary": "Atualiza um treino existente",
                "operationId": "2eeaee2d262b0c57d3cd587793722155",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do treino a ser atualizado",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "date",
                                    "sets"
                                ],
                                "properties": {
                                    "date": {
                                        "type": "string",
                                        "format": "date",
                                        "example": "2025-07-30"
                                    },
                                    "notes": {
                                        "type": "string",
                                        "example": "Treino atualizado"
                                    },
                                    "sets": {
                                        "type": "array",
                                        "items": {
                                            "properties": {
                                                "exercise_id": {
                                                    "type": "integer",
                                                    "example": 2
                                                },
                                                "weight": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 60
                                                },
                                                "repetitions": {
                                                    "type": "integer",
                                                    "example": 12
                                                },
                                                "order": {
                                                    "type": "integer",
                                                    "example": 1
                                                }
                                            },
                                            "type": "object"
                                        }
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Treino atualizado com sucesso"
                    },
                    "404": {
                        "description": "Treino não encontrado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Workouts"
                ],
                "summary": "Remove um treino do usuário",
                "operationId": "a03d56a1198815dce09be237f3587c22",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do treino",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Treino removido com sucesso"
                    },
                    "404": {
                        "description": "Treino não encontrado"
                    }
                },
                "security": [
                    {
                        "bearerAuth": []
                    }
                ]
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Exercises",
